%aside
  .test
    .test_sub
      .test_sub_header
        %h4= t('welcome_page.sign_up_form.title')
      .signup
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = devise_error_messages!
          .control_group
            = f.label :email
            = f.email_field :email, class: "control_group_input"
          .control_group
            = f.label :password
            = f.password_field :password, class: "control_group_input"
          .control_group
            = f.label :password_confirmation, t('user.confirm_password')
            = f.password_field :password_confirmation, class: "control_group_input"
          .control_group
            = f.submit t('welcome_page.sign_up_form.submit_btn'), class: "button blue"
      .sub_header
        = "OR"
      = link_to(user_omniauth_authorize_path(:linkedin), class: 'signin-button linkedin') do
        %i
        %span= t('welcome_page.sign_in_with_linkedin_btn')
